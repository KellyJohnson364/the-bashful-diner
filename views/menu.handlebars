<header>
  <h1 class="border-top border-4 display-4 text-center p-3">
    <span class="fas fa-utensils"></span> The Bashful Diner
  </h1>
  <h2 class="display-6 text-center p-2">Menu</h2>
</header>

<div class="tab">
  <div class="vertical-menu">
    <p class="active">Menu Items</p>
    <a class="tablinks" onclick="openMenu(event, 'Appetizers')">Appetizers</a>
    <a class="tablinks" onclick="openMenu(event, 'Soups/Salads')">Soups/Salads</a>
    <a class="tablinks" onclick="openMenu(event, 'Main Dishes')">Main Dishes</a>
    <a class="tablinks" onclick="openMenu(event, 'Desserts')">Desserts</a>
  </div>
</div>

<div id="Appetizers" class="tabcontent">
  <h2>Appetizers</h2>
  {{#each menu as |menuItem| }}
  {{#if menuItem.appetizer}}
  <li>{{menuItem.dish_name}}.................................${{menuItem.price}} <button data-id="{{menuItem.id}}"
      class="addToCart">Add to Cart</button></li>
  <p class="description">{{menuItem.description}}</p>
  {{/if}}
  {{/each}}
</div>

<div id="Soups/Salads" class="tabcontent" style="display: none">
  <h2>Soups/Salads</h2>
  {{#each menu as |menuItem| }}
  {{#if menuItem.soup_salad}}
  <li>{{menuItem.dish_name}}.................................${{menuItem.price}} <button data-id="{{menuItem.id}}"
      class="addToCart">Add to Cart</button></li>
  <p class="description">{{menuItem.description}}</p>
  {{/if}}
  {{/each}}
</div>

<div id="Main Dishes" class="tabcontent" style="display: none">
  <h2>Main Dishes</h2>
  {{#each menu as |menuItem| }}
  {{#if menuItem.main}}
  <li>{{menuItem.dish_name}}.................................${{menuItem.price}} <button data-id="{{menuItem.id}}"
      class="addToCart">Add to Cart</button></li>
  <p class="description">{{menuItem.description}}</p>
  {{/if}}
  {{/each}}
</div>

<div id="Desserts" class="tabcontent" style="display: none">
  <h2>Desserts</h2>
  {{#each menu as |menuItem| }}
  {{#if menuItem.dessert}}
  <li>{{menuItem.dish_name}}.................................${{menuItem.price}} <button data-id="{{menuItem.id}}"
      class="addToCart">Add to Cart</button></li>
  <p class="description">{{menuItem.description}}</p>
  {{/if}}
  {{/each}}
</div>

<div class="container-fluid border-bottom border-4">
  <footer class="m-4">
    <div class="row">
      <div class="col-lg-3"></div>
      <button id="requestServer" class="linkStyle buttonStyle text-center col-lg-2 col-sm-12 p-2 m-2">
        Request Server
      </button>
      <button class="buttonStyle text-center col-lg-2 col-sm-12 p-2 m-2">
        <a class="linkStyle" href="/cart">View Cart</a></button>
      <button class="buttonStyle text-center col-lg-2 col-sm-12 p-2 m-2">
        <a class="linkStyle" href="/bill">View Current Bill</a></button>
      </button>
      <div class="col-lg-3"></div>
    </div>
  </footer>
</div>
<script src="/js/menu.js"></script>
 